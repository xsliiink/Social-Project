{
  "compilerOptions": {
    "target": "ESNext",
    "jsx" : "react-jsx",
    "module": "NodeNext",        // Важно для корректной работы импортов
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*", "../shared/**/*"] 
}